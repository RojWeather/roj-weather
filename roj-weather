const weatherDiv = document.getElementById("weather");
const ratesDiv = document.getElementById("rates");
const languageSelect = document.getElementById("language");
const weatherTitle = document.getElementById("weather-title");
const ratesTitle = document.getElementById("rates-title");

function renderWeather(lang){
  weatherDiv.innerHTML = "";
  citiesData.forEach(c => {
    const name = c[`name_${lang}`] || c.name_en;
    const el = document.createElement("div");
    el.className = "card";
    el.innerHTML = `<h4>${name}</h4><p>${c.weather}</p><p>${c.temp} °C</p>`;
    weatherDiv.appendChild(el);
  });
}

function renderRates(){
  ratesDiv.innerHTML = "";
  fetch('https://api.exchangerate.host/latest?base=TRY&symbols=USD,EUR,GBP')
    .then(res => res.json())
    .then(data => {
      ["USD","EUR","GBP"].forEach(cur => {
        const el = document.createElement("div");
        el.className = "card";
        el.innerHTML = `<h4>${cur}</h4><p>1 TRY = ${data.rates[cur].toFixed(2)} ${cur}</p>`;
        ratesDiv.appendChild(el);
      });
    }).catch(err=>console.log(err));
}

// İlk render
renderWeather("en");
renderRates();

// Dil değiştirildiğinde
languageSelect.addEventListener("change",()=>{
  const lang = languageSelect.value;
  weatherTitle.innerText = langData[lang].weather;
  ratesTitle.innerText = langData[lang].rates;
  renderWeather(lang);
});

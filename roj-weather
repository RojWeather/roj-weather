// ðŸ”¹ Hava durumu Ã§ekme fonksiyonu
async function fetchWeather() {
  const weatherDiv = document.getElementById("weather");
  weatherDiv.innerHTML = "Loading...";
  
  let html = "";
  for(const city of citiesCoords){
    // Open-Meteo API Ã¶rnek URL (tarih ve timezone ayarlayabilirsin)
    let url = `https://api.open-meteo.com/v1/forecast?latitude=${city.lat}&longitude=${city.lon}&current_weather=true&timezone=auto`;
    
    try {
      const res = await fetch(url);
      const data = await res.json();
      const cw = data.current_weather;
      html += `<div class="card"><h3>${cityNames[city.name][currentLang]}</h3>
      <p>Temp: ${cw.temperature}Â°C</p>
      <p>Wind: ${cw.windspeed} km/h</p>
      <p>Weather code: ${cw.weathercode}</p></div>`;
    } catch(err){
      html += `<div class="card"><h3>${cityNames[city.name][currentLang]}</h3><p>Error fetching data</p></div>`;
    }
  }
  weatherDiv.innerHTML = html;
}

// ðŸ”¹ DÃ¶viz Ã§ekme (exchangerate.host)
async function fetchRates(){
  const ratesDiv = document.getElementById("rates");
  try {
    const res = await fetch("https://api.exchangerate.host/latest?base=TRY&symbols=USD,EUR,GBP");
    const data = await res.json();
    ratesDiv.innerHTML = `<div class="card">USD: ${data.rates.USD.toFixed(2)}</div>
                          <div class="card">EUR: ${data.rates.EUR.toFixed(2)}</div>
                          <div class="card">GBP: ${data.rates.GBP.toFixed(2)}</div>`;
  } catch(err){
    ratesDiv.innerHTML = `<div class="card">Error fetching rates</div>`;
  }
}

// ðŸ”¹ Render
function renderWeather(){
  fetchWeather();
  fetchRates();
}

// Ä°lk yÃ¼kleme
renderWeather();
</script>
